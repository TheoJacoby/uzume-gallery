{% extends 'base.html.twig' %}

{% block title %}Modifier mon profil - Uzume Gallery{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card border-0" style="background: rgba(255, 255, 255, 0.95); backdrop-filter: blur(10px); border-radius: 20px; box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);">
            <div class="card-body p-5">
                <div class="text-center mb-4">
                    <h1 class="display-5 mb-2" style="color: var(--japanese-red); font-weight: 600;">Modifier mon profil</h1>
                    <p class="text-muted">Mettez Ã  jour vos informations personnelles</p>
                </div>

                {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': true}}) }}
                    <div class="mb-3">
                        {{ form_label(form.email, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                        {{ form_widget(form.email, {'attr': {'class': 'form-control form-control-lg'}}) }}
                        {{ form_errors(form.email) }}
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.firstName, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                            {{ form_widget(form.firstName, {'attr': {'class': 'form-control form-control-lg'}}) }}
                            {{ form_errors(form.firstName) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.lastName, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                            {{ form_widget(form.lastName, {'attr': {'class': 'form-control form-control-lg'}}) }}
                            {{ form_errors(form.lastName) }}
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.imageFile, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                        {% if app.user.imageName %}
                            <div class="mb-3 text-center">
                                <img src="{{ vich_uploader_asset(app.user, 'imageFile') }}" alt="{{ app.user.getFullName() }}" 
                                     class="img-fluid rounded-circle mb-2" 
                                     style="width: 80px; height: 80px; object-fit: cover; border: 2px solid var(--japanese-red); box-shadow: 0 4px 15px rgba(220, 20, 60, 0.2);">
                                <p class="text-muted small mb-2">Avatar actuel</p>
                            </div>
                        {% endif %}
                        {{ form_widget(form.imageFile.file, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.imageFile) }}
                        {% if app.user.imageName %}
                            <div class="mt-3">
                                <div class="form-check">
                                    {{ form_widget(form.imageFile.delete, {'attr': {'class': 'form-check-input'}}) }}
                                    <label class="form-check-label" for="{{ form.imageFile.delete.vars.id }}">
                                        Supprimer l'avatar actuel
                                    </label>
                                </div>
                            </div>
                        {% endif %}
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-lg" style="background: linear-gradient(135deg, var(--japanese-red) 0%, var(--japanese-red-dark) 100%); color: white; border: none; border-radius: 25px; padding: 12px 30px; font-weight: 600; transition: all 0.3s ease; box-shadow: 0 4px 15px rgba(220, 20, 60, 0.3);">
                            Enregistrer les modifications
                        </button>
                        <a href="{{ path('app_user_profile') }}" class="btn btn-outline-dark" style="border-radius: 25px; padding: 10px 30px;">
                            Annuler
                        </a>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>

<style>
    .form-control:focus {
        border-color: var(--japanese-red);
        box-shadow: 0 0 0 0.2rem rgba(220, 20, 60, 0.25);
    }
    .form-control-lg {
        border-radius: 10px;
        border: 2px solid #e0e0e0;
        transition: all 0.3s ease;
    }
    .form-control-lg:hover {
        border-color: var(--japanese-red);
    }
    .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(220, 20, 60, 0.4) !important;
    }
</style>
{% endblock %}


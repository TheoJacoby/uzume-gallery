{% extends 'base.html.twig' %}

{% block title %}Mon profil - Uzume Gallery{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card border-0" style="background: rgba(255, 255, 255, 0.95); backdrop-filter: blur(10px); border-radius: 20px; box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);">
            <div class="card-body p-5">
                <div class="text-center mb-4">
                    {% if app.user.imageName %}
                        <img src="{{ vich_uploader_asset(app.user, 'imageFile') }}" alt="{{ app.user.getFullName() }}" 
                             style="width: 120px; height: 120px; border-radius: 50%; object-fit: cover; border: 4px solid var(--japanese-red); box-shadow: 0 8px 20px rgba(220, 20, 60, 0.3);">
                    {% else %}
                        <div style="width: 120px; height: 120px; border-radius: 50%; background: linear-gradient(135deg, var(--japanese-red) 0%, var(--japanese-red-dark) 100%); color: white; display: flex; align-items: center; justify-content: center; margin: 0 auto; font-size: 2.5rem; font-weight: bold; box-shadow: 0 8px 20px rgba(220, 20, 60, 0.3);">
                            {{ app.user.firstName|first }}{{ app.user.lastName|first }}
                        </div>
                    {% endif %}
                    <h1 class="display-5 mt-3 mb-2" style="color: var(--japanese-red); font-weight: 600;">{{ app.user.getFullName() }}</h1>
                    <p class="text-muted">{{ app.user.email }}</p>
                </div>

                <div class="mb-4">
                    <h3 class="h5 mb-3" style="color: var(--japanese-black); border-bottom: 2px solid var(--japanese-red); padding-bottom: 0.5rem;">Informations</h3>
                    <div class="row mb-3">
                        <div class="col-4 fw-semibold">Prénom :</div>
                        <div class="col-8">{{ app.user.firstName }}</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-4 fw-semibold">Nom :</div>
                        <div class="col-8">{{ app.user.lastName }}</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-4 fw-semibold">Email :</div>
                        <div class="col-8">{{ app.user.email }}</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-4 fw-semibold">Rôle :</div>
                        <div class="col-8">
                            {% if is_granted('ROLE_ADMIN') %}
                                <span class="badge" style="background: var(--japanese-red); color: white;">Administrateur</span>
                            {% else %}
                                <span class="badge bg-secondary">Utilisateur</span>
                            {% endif %}
                        </div>
                    </div>
                    {% if app.user.updatedAt %}
                        <div class="row mb-3">
                            <div class="col-4 fw-semibold">Dernière mise à jour :</div>
                            <div class="col-8">{{ app.user.updatedAt|date('d/m/Y à H:i') }}</div>
                        </div>
                    {% endif %}
                </div>

                <div class="d-grid gap-2">
                    <a href="{{ path('app_user_profile_edit') }}" class="btn btn-lg" style="background: linear-gradient(135deg, var(--japanese-red) 0%, var(--japanese-red-dark) 100%); color: white; border: none; border-radius: 25px; padding: 12px 30px; font-weight: 600; transition: all 0.3s ease; box-shadow: 0 4px 15px rgba(220, 20, 60, 0.3);">
                        Modifier mon profil
                    </a>
                    <a href="{{ path('app_home') }}" class="btn btn-outline-dark" style="border-radius: 25px; padding: 10px 30px;">
                        Retour à l'accueil
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

